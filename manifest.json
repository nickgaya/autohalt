{
  "manifest_version": 2,

  "name": "AutoHalt",
  "version": "1.2",

  "author": "Nicholas Gaya",
  "description": "Turn off autoplaying of suggested content on YouTube, Facebook, Twitch, and Gfycat.",
  "homepage_url": "https://github.com/nickgaya/autohalt",

  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "48.0"
    }
  },

  "icons": {
    "48": "icons/autohalt.svg",
    "96": "icons/autohalt.svg"
  },

  "permissions": [
    "storage"
  ],

  "options_ui": {
    "page": "settings/settings.html",
    "open_in_tab": false
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content_scripts/autohalt.js",
        "content_scripts/autohalt-youtube.js"
      ]
    },
    {
      "matches": [
        "*://*.facebook.com/*"
      ],
      "js": [
        "content_scripts/autohalt.js",
        "content_scripts/autohalt-facebook.js"
      ]
    },
    {
      "matches": [
        "*://*.twitch.tv/*"
      ],
      "js": [
        "content_scripts/autohalt.js",
        "content_scripts/autohalt-twitch.js"
      ]
    },
    {
      "matches": [
        "*://*.gfycat.com/*"
      ],
      "js": [
        "content_scripts/autohalt.js",
        "content_scripts/autohalt-gfycat.js"
      ]
    }
  ]
}
